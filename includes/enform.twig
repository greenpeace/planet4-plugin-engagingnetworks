{% block enform %}
	{% if 0 == enform_submit %}
		<form id="p4en_form" name="p4en_form" method="post">
			{{ fn( 'wp_nonce_field', nonce_action, 'enform_nonce', true, false )|raw }}
			<input type="hidden" name="enform_submit" value="{{ enform_submit }}">
			<input type="hidden" name="en_page_id" value="{{ fields.en_page_id }}">

			{{ error_msg }}
			<table id="enform_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
			{% for name,info in fields %}
				{% if 'en_page_id' != name and '' != info.value %}
					<tr>
						<td>
							<label for="{{ name }}">{{ info.label }}</label>
						</td>
						<td>
						{% if 'text' == info.type %}
							<input id="{{ name }}" type="text" name="{{ name }}" value="" />
						{% elseif 'country' == info.type %}
							<select id="{{ name }}" name="{{ name }}">
								<option selected disabled>- {{ __( 'Select Country', domain ) }} -</option>
								{% for key, country in countries %}
									<option value="{{ key }}">{{ country }}</option>
								{% endfor %}
							</select>
						{% elseif 'question' == info.type %}
							<input id="{{ name }}" type="text" name="{{ name }}" value="" />
						{% endif %}
						</td>
					</tr>
				{% endif %}
			{% endfor %}
			</table>
			<p class="submit">
				<input type="submit" name="p4en_form_save_button" id="p4en_form_save_button" class="button button-primary" value="{{ __( 'Sign', domain ) }}">
			</p>
		</form>
	{% else %}
		{{ __( 'Thanks for signing!', domain ) }}
		<br />
		<br />
	{% endif %}
	<div class="clear"></div>
{% endblock %}
