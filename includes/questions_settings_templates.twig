<script type="text/html" id="tmpl-en-available-questions">
	<h2 class="page-header">{{ __('List of available en questions and opt-ins', 'planet4-engagingnetworks') }}</h2>
	<p>
	<div class="hidden" id="en_loader">
		<img src="/wp-admin/images/wpspin_light-2x.gif"/>
	</div>
	</p>
	<h5><%= col.length %> {{ __('questions available', 'planet4-engagingnetworks') }}</h5>
	<ul class="media-list row available-questions-container"></ul>
	<br>
	<p class="">
		<button class="btn button reload-questions">{{ __('Reload', 'planet4-engagingnetworks') }}</button>
	</p>
</script>

<script type="text/html" id="tmpl-en-questions">
	<h2 class="page-header">{{ __('List of selected en questions and opt-ins', 'planet4-engagingnetworks') }}</h2>
	<h5><%= col.length %> {{ __('questions selected', 'planet4-engagingnetworks') }}</h5>
	<ul class="media-list row questions-container"></ul>
	<br>
	<p class="">
		<button class="btn button reload-questions">{{ __('Reload', 'planet4-engagingnetworks') }}</button>
	</p>
	<div id="new-question-div"></div>
</script>

<script type="text/html" id="tmpl-en-available-question">
	<div>
		<h5>
			<%- name %>
			<span>
				<a class="add-question"><span class="dashicons dashicons-plus field-dashicon"></span></a>
			</span>
		</h5>
	</div>
	<div class="media-body">
		<dl>
			<dt><input type="hidden" disabled="disabled" class="form-control" value="<%- questionId %>"></dt>
			<dt>{{ __('Type', 'planet4-engagingnetworks') }}: <%- type %></dt>

		</dl>
	</div>
</script>

<script type="text/html" id="tmpl-en-question">
	<div>
		<h5>
			<%- name %>
			<span>
				<a class="edit-this-question"><span class="dashicons dashicons-edit field-dashicon"></span></a>
				<a class="delete-question"><span class="dashicons dashicons-trash field-dashicon"></span></a>
            </span>
		</h5>
	</div>
	<div class="media-body">
		<dl>
			<dt>{{ __('Question', 'planet4-engagingnetworks') }}:</dt>
			<dd><%- label %></dd>
			<dt>{{ __('Type', 'planet4-engagingnetworks') }}: <%- type %></dt>
			<dt><input type="hidden" disabled="disabled" class="form-control" value="<%- questionId %>"></dt>

		</dl>
	</div>
</script>

<script type="text/html" id="tmpl-new-en-question">
	<hr>
	<h4><%= label== '' ? 'Create Question ' : 'Edit Question ->  ' + name %> </h4>
	<form role="form" class="form-horizontal question-form">
		<div class="form-group">
			<label class="col-md-3 control-label">{{ __('Question name', 'planet4-engagingnetworks') }}:</label>
			<div class="col-md-3">
				<input type="text" class="form-control question-name-input" value="<%- name %>" id="en_question_name"
					   disabled>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-3 control-label">{{ __('Question', 'planet4-engagingnetworks') }}:</label>
			<div class="col-md-3">
				<input type="text" class="form-control question-label-input" value="<%- label %>"
					   id="en_question_label">
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-3 control-label">{{ __('Type', 'planet4-engagingnetworks') }}:</label>
			<div class="col-md-3">
				<input type="text" class="form-control question-type-input" value="<%- type %>" id="en_question_type" disabled>
				<input type="hidden" value="<%- id %>" id="en_question_id">
				<input type="hidden" value="<%- questionId %>" id="en_question__id">
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-2">
				<button class="button button-primary <%= label== '' ? 'create-question' : 'edit-question' %>" <%= 'data-id="' + id +'"' %>>{{ __('Submit') }}</button>
				<button class="button cancel-question">{{ __('Cancel') }}</button>
			</div>
		</div>
	</form>
</script>
